<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUsernamePeminjam"
        android:hint="Username yang meminjam" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/txtJulmlah"
        android:hint="Jumlah Pinjaman" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:id="@+id/btnDone"
        android:layout_gravity="center_horizontal" />

</LinearLayout><!-- From: file:/Users/rahadiankumang/Documents/Kuliah/Tangeun/ParseStarterProject/res/layout/hutangbaru.xml -->